<?xml version="1.0" encoding="UTF-8"?>
<template name="LogsConsole" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="proxy_name"/>
    <parameter name="stage"/>
    <parameter name="message_id"/>
    <parameter name="relates_to"/>
    <parameter name="reply_to"/>
    <parameter name="fault_to"/>
    <parameter name="payload"/>
    <sequence>
        <log level="custom" separator="|">
            <property expression="$func:proxy_name" name="proxy_name"/>
            <property expression="$func:stage" name="stage"/>
            <property expression="$func:message_id" name="message_id"/>
            <property expression="$func:relates_to" name="relates_to"/>
            <property expression="$func:reply_to" name="reply_to"/>
            <property expression="$func:fault_to" name="fault_to"/>
            <property expression="$func:body" name="body"/>
        </log>
    </sequence>
</template>
